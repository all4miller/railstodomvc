<p id="notice"><%= notice %></p>

<section id="todoapp">
  <header id="header">
    <h1>todos</h1>
    <%= form_for @task, remote: true do |f| %>
      <%= f.text_field :what, placeholder: "What needs to be done?" %>
    <% end %>
  </header>
  <section id="main">
    <input id="toggle-all" class="" type="checkbox">
    <ul id="todo-list">
      <%= render @tasks %>
    </ul>
  </section>
  <footer id="footer">
    <span id="todo-count"><strong><%= @open_tasks %></strong><%=  %> items left</span>
    <ul id="filters">
      <li>
        <a class="selected" data-filter="all">All</a>
      </li>
      <li>
        <a class="" data-filter="active">Active</a>
      </li>
      <li>
        <a class="" data-filter="completed">Completed</a>
      </li>
    </ul>
  </footer>
</section>
