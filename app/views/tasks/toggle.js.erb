<% if @task.closed? %>
  $('#task-<%= @task.id%>').addClass('completed').removeClass('active');
  $('#task-<%= @task.id%> .toggle').prop('checked', true);
<% else %>
  $('#task-<%= @task.id%>').removeClass('completed').addClass('active');
  $('#task-<%= @task.id%> .toggle').prop('checked', false);
<% end %>

$('#todo-count strong').text("<%= pluralize(@open_tasks, 'item') %>");
